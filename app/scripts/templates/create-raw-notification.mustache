<div class="page-header">
    <h1>Create <small>Raw Notification</small></h1>
</div>

<form class="form-horizontal" data-validate="parsley">
    <div class="form-group">
        <label for="inputTopic" class="col-lg-2 control-label">Topic</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="inputTopic" placeholder="Topic" data-required="true">
        </div>
    </div>
    <div class="form-group">
        <label for="inputSubject" class="col-lg-2 control-label">Subject</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="inputSubject" placeholder="Subject" data-required="true">
        </div>
    </div>
    <div class="form-group">
        <label for="inputContent" class="col-lg-2 control-label">Content</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="inputContent" data-required="true"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>
</form>